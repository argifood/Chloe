<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="40dp"
        android:height="40dp"
        android:right="6dp">
        <shape>
            <solid android:color="@color/blue" />
            <corners
                android:bottomLeftRadius="8dp"
                android:topLeftRadius="8dp" />
        </shape>
    </item>

    <item
        android:width="28dp"
        android:height="28dp"
        android:left="40dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@color/blue" />
            </shape>
        </rotate>
    </item>

</layer-list>